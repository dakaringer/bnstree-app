{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended", "tslint-react", "tslint-plugin-prettier", "tslint-config-prettier"],
	"rules": {
		"prettier": true,
		"interface-name": {
			"options": ["never-prefix"]
		},
		"ordered-imports": false,
		// "jsx-no-lambda": false,
		"jsx-boolean-value": {
			"options": ["never"]
		},
		"no-console": {
			"options": ["log"]
		},
		"member-access": {
			"options": ["no-public"]
		},
		"object-literal-sort-keys": false,
		"member-ordering": {
			"options": { "order": ["static-field", "constructor", "instance-method"] }
		},
		"array-type": {
			"options": ["array"]
		},
		"variable-name": {
			"options": ["ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore"]
		},
		"ban-types": {
			"options": [
				["Object", "Avoid using the `Object` type. Did you mean `object`?"],
				["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
				["Number", "Avoid using the `Number` type. Did you mean `number`?"],
				["String", "Avoid using the `String` type. Did you mean `string`?"],
				["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
			]
		},
		"no-empty-interface": false
	}
}
