extends layout

block content
    .content-wrap
        .highlight
            .col-sm-8.timerContainer
                include ./includes/timer.jade
            .news.col-sm-4
                .charSearch
                    h3 Character Search
                    form(role="search" action="./character")
                        .radio
                            label.radio-inline
                                input(type="radio" name="r" value="na" checked=region=="na"||!region)
                                span NA
                            label.radio-inline
                                input(type="radio" name="r" value="eu" checked=region=="eu")
                                span EU
                        input.form-control(type="text" name="c" placeholder="Search character")
                .build-list
                    a(href="/update")
                        h3 Update
                    table.table
                        tbody#posts
                            - var yesterday = new Date(new Date().getTime() - (24 * 60 * 60 * 1000));
                            - var type = "update";
                            each post in update
                                tr
                                    td.col-sm-9
                                        a(href='/' + type + '/' + post._id) #{post.title}
                                        //span.disqus-comment-count(data-disqus-identifier=job + '/' + post._id) 0
                                        if post.datePosted > yesterday
                                            span.new N
                                    td.col-sm-3 #{post.dateEdited.getDate() + '.' + (post.dateEdited.getMonth()+1) + '.' + post.dateEdited.getFullYear()}


    script(type='text/javascript' src='/js/vendor.js')
    
