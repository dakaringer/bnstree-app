            .build-list.col-lg-6
                h2 Weekly Popular Builds
                table.table.table-hover
                    thead
                        tr
                            th.col-sm-2 Class
                            th.col-sm-1 Type
                            th.col-sm-5 Title
                            th.col-sm-1 Req. Level
                            th.col-sm-2 Posted by
                            th.col-sm-1.text-center: i.fa.fa-heart
                    tbody#popbuilds
                        - var yesterday = new Date(new Date().getTime() - (24 * 60 * 60 * 1000));
                        each build in popBuildList
                            -var jobName = ""
                            case build.job
                                when "BM"
                                    -jobName = "Blade Master"
                                when "KF"
                                    -jobName = "Kung Fu Master"
                                when "DE"
                                    -jobName = "Destroyer"
                                when "FM"
                                    -jobName = "Force Master"
                                when "AS"
                                    -jobName = "Assasssin"
                                when "SU"
                                    -jobName = "Summoner"
                                when "BD"
                                    -jobName = "Blade Dancer"
                                when "WL"
                                    -jobName = "Warlock"
                                when "SF"
                                    -jobName = "Soul Fighter"
                            tr
                                td= jobName
                                td #{build.type}
                                td
                                    a(href='/' + build.job + '/' + build._id) #{build.title}
                                    //span.disqus-comment-count(data-disqus-identifier=job + '/' + build._id) 0
                                    if build.datePosted > yesterday
                                        span.new N
                                if (build.hLevel > 0)
                                    td Lv#{build.level} H#{build.hLevel}
                                else 
                                    td Lv#{build.level}
                                td #{build.author.username}
                                td.text-center #{build.likes}
